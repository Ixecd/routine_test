{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++23",
                "-g",
                "${fileDirname}/${fileBasenameNoExtension}.cc",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-lpthread",
                "-ltbb",
                "-I${fileDirname}/../marco"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: /usr/bin/g++"
        }
    ]
}
